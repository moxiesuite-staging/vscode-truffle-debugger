{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Extension",
      "preLaunchTask": "npm",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [ "${workspaceFolder}/out/**/*.js" ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/debugger.ts",
      "args": [ "--server=4711" ],
      "outFiles": [ "${workspaceFolder}/out/**/*.js" ]
    },
    {
      "type": "truffle-debugger",
      "request": "launch",
      "name": "Debug Solidity",
      // "debugServer": 4711,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test",
        "--inspect=60000",
        "--debug-brk"
      ],
      "port": 9229
    },
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": [ "Extension", "Server" ]
    },
    {
      "name": "Debugger + Test",
      "configurations": [ "Debug Solidity", "Tests" ]
    }
  ]
}